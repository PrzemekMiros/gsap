---
layout: layouts/base.njk
title: Realizacje
---

<section class="pt-xlarge pb-medium" data-scroll-section>
    <div class="container">
        <div class="row gx-0 pt-small">
            <div class="offset-3 offset-md-4 col-6">
                <h1 class="big-text mt-5">
                    {{ title }}
                </h1>
            </div>
        </div>
        <div class="row gx-0 pt-small">
            {% for page in collections.realizacje %}
                <div class="offset-3 offset-md-4 col-7 col-md-6">
                    <a href="{{ page.url }}">
                        <div class="hover-thumb">
                            <img src="{{ page.data.thumbnail }}" alt="{{ page.data.title }}"/>
                        </div>
                        <p class="mt-3 mb-1">
                            <small>{{ page.data.tags }}</small>
                        </p>
                        <h2 class="h5 mt-0 mb-5">
                            {{ page.data.title }}
                        </h2>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</section>